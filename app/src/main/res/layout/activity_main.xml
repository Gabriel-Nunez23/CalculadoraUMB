<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="6"
    android:padding="16dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:padding="16dp"
        android:text="0" />

    <Button android:id="@+id/buttonC" android:text="AC" style="@style/CalcButtonLight" android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"/>
    <Button android:id="@+id/buttonDelete" android:text="DEL" style="@style/CalcButtonLight" />
    <Button android:id="@+id/buttonDivide" android:text="รท" style="@style/CalcButtonOrange" />

    <Button android:id="@+id/button7" android:text="7" style="@style/CalcButtonDark" />
    <Button android:id="@+id/button8" android:text="8" style="@style/CalcButtonDark" />
    <Button android:id="@+id/button9" android:text="9" style="@style/CalcButtonDark" />
    <Button android:id="@+id/buttonMultiply" android:text="ร" style="@style/CalcButtonOrange" />

    <Button android:id="@+id/button4" android:text="4" style="@style/CalcButtonDark" />
    <Button android:id="@+id/button5" android:text="5" style="@style/CalcButtonDark" />
    <Button android:id="@+id/button6" android:text="6" style="@style/CalcButtonDark" />
    <Button android:id="@+id/buttonSubtract" android:text="-" style="@style/CalcButtonOrange" />

    <Button android:id="@+id/button1" android:text="1" style="@style/CalcButtonDark" />
    <Button android:id="@+id/button2" android:text="2" style="@style/CalcButtonDark" />
    <Button android:id="@+id/button3" android:text="3" style="@style/CalcButtonDark" />
    <Button android:id="@+id/buttonAdd" android:text="+" style="@style/CalcButtonOrange" />

    <Button android:id="@+id/button0" android:text="0"
        style="@style/CalcButtonDark"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal" />
    <Button android:text="." style="@style/CalcButtonDark" />
    <Button android:id="@+id/buttonEquals" android:text="=" style="@style/CalcButtonOrange" />

</GridLayout>