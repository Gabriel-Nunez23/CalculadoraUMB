<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- DefiniciÃ³n del tema principal -->
    <style name="Theme.CalculadoraUMB" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <!-- Estilos de botones existentes -->
    <style name="CalcButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:shape">oval</item>
    </style>

    <style name="CalcButtonDark" parent="CalcButton">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="CalcButtonLight" parent="CalcButton">
        <item name="android:background">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalcButtonOrange" parent="CalcButton">
        <item name="android:background">@color/orange</item>
    </style>
</resources>